                    },
                    image2: {
                        required: "Choose valid image"
                    },
                    image3: {
                        required: "Choose valid image"
                    },
                    category: {
                        required: "Select the category",
                    },
                    price: {
                        required: "Enter the price",
                        numbersOnly: "please enter numbers"
                    },

                    brand: {
                        required: "Enter the brand",
                    },

                    quantity: {
                        required: "enter the quantity",
                    }
                }
            })
        })
