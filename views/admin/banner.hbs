<body>
  <div class="container">
    <div class="table-container">
      <div class="error-content text-center" style="background-image: url(/image/9ba09080924795.5cef394f1046e-COPY.jpg); background-size: cover;">
  <div class="container">
    <h2 class="section-title px-5">
      <span class="px-2" style="color: #100f0f; font-size: 36px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">
        Welcome to our <strong>Banner</strong> section!
      </span>
    </h2>
    <p style="color: rgb(19, 19, 19);"></p>
  </div><!-- End .container -->
</div>


 <table id="myTable" class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>

        {{!-- <a href="#" class="btn btn-edit">Edit Products</a> --}}

        <tbody>
          <a href="/admin/add-banner" onclick="ADDPRODUCT()" class="submit-button">Add Banner</a>
          <br>
          <br>
          {{#each banner}}

          {{this.banner.name}}
          <tr>
            {{!-- <td>{{this._id}}</td> --}}
            <td>{{this.name}}</td>
            <td><img src="/uploads/{{this.image.[0]}}" alt="{{this.image}}" width="100px" height="100px"></td>

<td><button onclick="deletebanner('{{this._id}}')" class="btn btn-danger">Delete</button></td>
           
          </tr>

          {{/each}}

        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.5.0/js/bootstrap.min.js"></script>

  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>


<script>
   function deletebanner(banner){
     
     console.log("hai")
      fetch('/admin/removebanner',{
        method: 'POST',
        headers:{
          'Content-Type' : 'application/json'            
        },
        body: JSON.stringify({
            banner:banner
        })
      })

      .then((res) => res.json())
      .then((res) => window.location.reload())
      .catch(error => console.error(error))
    }
  </script>




