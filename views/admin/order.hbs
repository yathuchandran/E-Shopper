{{>adminHeader}}
<!DOCTYPE html>
<html>

<head>
  <title>Order History</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link href="/stylesheets/style.css" rel="stylesheet">


<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Order History</h1>
    <div class="table-responsive">
      <table id="myTable" class="table table-striped table-bordered">
        <thead>
          <tr>
            {{!-- <th>Image</th> --}}
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Address</th>
            <th>Payment Mode</th>
            <th>Order Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each order}}
          <tr>

            {{!-- <td> <img src="/uploads/{{this.items.product_id.image.[0]}}" alt="{{this.image}}" width="100px"
                height="100px"></td> --}}
            <td>{{this._id}}</td>
            <td>{{formatDate this.dateOrdered "DD-MM-YYY HH:mm:ss"}}</td>
            <td>
              {{this.shippingAddress.address1}},<br>
              {{this.shippingAddress.address2}},{{this.shippingAddress.city}},
              <br>{{this.shippingAddress.state}}

            </td>
            <td>{{this.paymentMode}}</td>
            <td>â‚¹ {{this.totalBill}}</td>
            <td><a href="/admin/orderdetails?id={{this._id}}" class="btn btn-primary btn-sm">View Details</a></td>

          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <!-- Include Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>




</script>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>


<script>

  $(document).ready(function () {
    $('#myTable').DataTable({
      "order": [[1, "desc"]]
    });
  });
</script>