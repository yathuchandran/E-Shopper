<body>

{{>userheader}}

<section class="vh-100" style="background-color: #ba7d8a;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form onclick="loginValidate()" action="/login" method="post">

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">LOGIN</span>
                  </div>

                  

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <script src="../../validation.js"></script>


                  <div class="form-outline mb-4">
                    <input type="email" name="email" id="email" placeholder="Enter email " id="form2Example17"
                      class="form-control form-control-lg" required/>
                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name="password" id="password" placeholder="Enter Password"
                      id="form2Example27" class="form-control form-control-lg" required/>
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>


                   {{#ifnoteq message 'undefined' }}
                    <p style="color: red"> {{message }}</p>
                    {{/ifnoteq}}

                  <div class="pt-1 mb-4">
                    <input class="btn btn-dark btn-lg btn-block" type="submit" value="login">
                  </div>


                </form>
                                                                    

                <div>
                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Don't have an account? <a href="/register" class="mb-5 pb-lg-2" style="color: #393f81;">Register</a>
                  </h5>
                </div>

                <a class="small text-muted" href="/forget">Forgot password? </a>
                {{!-- <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a 
                    style="color: #393f81;">Register here</a ></p> --}}
                {{!-- <a href="#!" class="small text-muted">Terms of use.</a>
                <a href="#!" class="small text-muted">Privacy policy</a> --}}


              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{{>userfooter}}



</body>

</html>