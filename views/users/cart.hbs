<script>

    let cartData = []

    const plusButtons = document.querySelectorAll('.plus-btn');
    const minusButtons = document.querySelectorAll('.minus-btn');
    const inputValues = document.querySelectorAll('.qty-input');
    const subTotal = document.querySelector('.subTotal')
    const cartPrice = document.querySelectorAll('.cart__price')
    const total = document.querySelector('.total')

    plusButtons.forEach(async (button, index) => {
        button.addEventListener('click', async () => {
            inputValues[index].value++;
            subTotal.innerHTML = Number(subTotal.innerHTML) + Number(cartPrice[index].innerHTML);
            total.innerHTML = subTotal.innerHTML;

            await fetch(`/cartUpdation?index=${index}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    quantity: "plus",
                }),
            });
        });
    });


    minusButtons.forEach(async (button, index) => {
        button.addEventListener('click', async () => {
            if (inputValues[index].value != 1) {
                inputValues[index].value--;

                subTotal.innerHTML = Number(subTotal.innerHTML) - Number(cartPrice[index].innerHTML);
                total.innerHTML = subTotal.innerHTML;

                await fetch(`/cartUpdation?index=${index}`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        quantity: "minus",
                    }),
                });
            }
        });
    });







</script>



<script>
    async function deleteproduct(addressId) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'This item will be removed from your cart!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            // If the user confirms the deletion
            if (result.value) {
                // Send a POST request to remove the product from the backend
                fetch('/deleteproduct', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        addressId: addressId
                    })
                })
                    .then(response => response.json())
                    .then(result => {
                        console.log(result); // Log the response to the console
                        if (result.res == "success") {
                            // Show a success message using SweetAlert2
                            Swal.fire(
                                'Deleted!',
                                'This item has been removed from your cart.',
                                'success'
                            ).then(() => {
                                // Reload the page after the success message is shown
                                location.reload();
                            });
                        } else {
                            // If there is an error, show an error message using SweetAlert2
                            Swal.fire(
                                'Error',
                                'There was an error removing the item from your cart.',
                                'error'
                            );
                        }
                    })
                    .catch(error => {
                        console.log(error); // Log any errors to the console
                        // Show an error message using SweetAlert2
                        Swal.fire(
                            'Error',
                            'There was an error removing the item from your cart.',
                            'error'
                        );
                    });
            }
        })
    }
</script>


