  {{> userheader}}

  <section class="vh-150 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 pb-5">
                <fieldset disabled="disabled"></fieldset>

                <form action="/register"  method="post">


                  <h2 class="fw-bold mb-2 text-uppercase">SignUp</h2>
                  <br>
                 
                  <p class="text-white-50 mb-5">Please enter your Username and password!</p>

                  <div class="form-outline form-white mb-4">
                    <input type="name" id="name" name="name" placeholder="Enter name "
                      class="form-control form-control-lg" required />
                    {{!-- <label class="form-label" for="typeEmailX">Name</label> --}}
                    <p id="errorMessage5" style="color: red"> </p>
                  </div>

                 
                    <div class="form-outline mb-4">
                    <input type="email" name="email" id="email" placeholder="Enter email " id="form2Example17"
                      class="form-control form-control-lg"/>
                    {{!-- <label class="form-label" for="form2Example17">Email address</label> --}}
                     <p id="errorMessage4" style="color: red"> </p>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <input type="number" pattern="\d{10}" id="mobile" name="mobile" placeholder="Enter Mobile"
                      class="form-control form-control-lg" required size=10 />
                    {{!-- <label class="form-label" for="typeEmailX">Mobile</label> --}}
                    <p id="errorMessage3" style="color: red"> </p>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <input type="password" id="pass1" name="password" placeholder="Enter Password"
                      class="form-control form-control-lg"  />
                    {{!-- <label class="form-label" for="typePasswordX">Password</label> --}}
                    <p id="errorMessage1" style="color: red"> </p>
                  </div>

                  <div class="form-outline form-white mb-4">
                    <input type="password" id="pass2" name="password2" placeholder=" Re-Enter Your Password"
                      class="form-control form-control-lg"  />
                    {{!-- <label class="form-label" for="typePasswordX">Password</label> --}}
                    <p id="errorMessage2" style="color: red"> </p>
                  </div>
                  <br>


                  {{#ifnoteq message 'undefined' }}
                  <p style="color: green;"> {{message }}</p>
                  {{/ifnoteq}}

                  {{#ifeq message 'undefined'}}
                  <p style="color: red"> {{message2 }}</p>
                  {{/ifeq}}
                  <p id="errorMessage " style="color: red"> </p>
                  
                 


                  <div>
                    <h5 class="fw-normal mb-3 pb-3">Alredy have an account? <a href="/login" class="mb-5 pb-lg-2"
                        style="color: #8089e9;">Login</a>
                    </h5>
                  </div>

                  <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Register">
                  <br><br>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
